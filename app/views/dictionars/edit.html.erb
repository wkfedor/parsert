<h3>Изменить словарь</h3>

<%= form_for @msql, url: dictionar_path(@msql), method: :patch do |f| %>   <!--название формы, url куда перейти-->


  <div class="container-fluid d-flex h-100 justify-content-center align-items-center p-0">
    <div class="row bg-white shadow-sm">
      <div class="col border rounded p-4">

        <h3>Изменить данные словаря</h3>

        <p>
          Вес<br/>
          <%= f.text_field :ves  %>
        </p>

        <p>
          Фраза<br/>
          <%= f.text_field :word %>
        </p>

        <p>
          Комментарий<br/>
          <%= f.text_field :comment %>
        </p>

        <p>
          Проекты<br/>
          <%= f.select :dproject, [["Berlin", "BE"], ["Chicago", "CHI"], ["Madrid", "MD"]]  %>
        </p>

        <%= f.submit "Отправить" %>
        </p>

      </div>
    </div>
  </div>

<% end %>
